@{
    ViewBag.Title = "New";
}
<script src="~/Scripts/Custom/HomeControler.js"></script>
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong></strong>
                </div>
                <div class="panel-body">
                    <form role="form" action="#" method="POST">
                        <fieldset>
                            <div class="row" ng-controller="homeController" ng-init="">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                            <input class="form-control" placeholder="Tài khoản" name="loginname" type="text" autofocus ng-model="account.username" value="">

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                            </span>
                                            <input class="form-control" placeholder="Mật khẩu" name="password" type="password" value="" ng-model="account.pass">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="button" class="btn btn-lg btn-primary btn-block" value="Đăng nhập" ng-click="XulyDangnhap()">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="panel-footer ">
                    Don't have an account! <a href=@Url.Action("SignUp","Home",null) onclick=""> Đăng kí ở đây </a>
                </div>
            </div>
        </div>
    </div>
</div>
