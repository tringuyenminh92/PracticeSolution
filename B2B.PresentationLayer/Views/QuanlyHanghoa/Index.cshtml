@{
    ViewBag.Title = "QuanlyHanghoa";
}
<script src="~/Scripts/Custom/QuanlyHanghoaController.js"></script>
<h2>Quản lý hàng hóa</h2>
<div class="container-fluid" ng-controller="quanlyHanghoaController" ng-init="LoadNhomHanghoa();LoadHanghoaTheoNhomHanghoa()">
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-10">
                <select class="form-control" ng-model="nhomHanghoaId" ng-options="obj.NhomHanghoaId as obj.TenNhomHanghoa for obj in nhomhanghoas">
                    <option value="">--Nhóm hàng hóa--</option>
                </select>
            </div>
            <div class="col-md-2">
                @*<button ng-click="" class="btn btn-default btn-xs"><i class="fa fa-pencil" /></button>*@
                <button type="button" class="btn btn-default" ng-click=""><i class="glyphicon glyphicon-calendar"></i></button>
            </div>
        </div>

        <div class="col-md-12" style="margin-top:20px">
            <div external-scopes="$scope" ui-grid-pagination ui-grid-edit ui-grid-resize-columns ui-grid="gridOptions">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Thông tin hàng hóa</div>
            </div>
            <div class="panel-body">
                <div class="form-group">Image</div>

                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Code" ng-model="hanghoa.Code">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tên hàng hóa" ng-model="hanghoa.TenHanghoa">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Barcode" ng-model="hanghoa.Barcode">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <select class="form-control" ng-model="hanghoa.DonviId" ng-options="obj.DonviId as obj.TenDonvi for obj in donvis">
                            <option value="">--Đơn vị--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" ng-model="hanghoa.NhomHanghoaId" ng-options="obj.NhomHanghoaId as obj.TenNhomHanghoa for obj in nhomhanghoas">
                            <option value="">--Nhóm hàng hóa--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" placeholder="Giá gốc" ng-model="hanghoa.Giagoc">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <textarea class="form-control" row="3" placeholder="Ghi chú" ng-model="hanghoa.Ghichu"></textarea>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        Active&nbsp
                        <input type="checkbox" ng-checked="hanghoa.Active==true" ng-model="hanghoa.Active">
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <input type="button" ng-disabled="" class="btn btn-info" value="Thêm" ng-click="ThemHanghoa">
                    <input type="button" ng-disabled="" ng-show="true" class="btn btn-info" value="Lưu thay đổi" ng-click="ThemHanghoa">
                </div>
            </div>
        </div>
    </div>
</div>