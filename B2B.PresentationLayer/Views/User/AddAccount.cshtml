<div class="container" ng-controller="loginController">
    @*<div class="row">*@
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Thêm mới</strong>
            </div>
            <div class="panel-body">
                <form role="form" action="#" method="POST" title="Create new" name="myForm">
                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-user"></i>
                                </span>
                                <input class="form-control" placeholder="Tài khoản" name="username" type="text" autofocus ng-model="username" required>
                            </div>
                            <span ng-show="myForm.username.$dirty && myForm.username.$invalid">
                                <span ng-show="myForm.username.$error.required">Không để trống.</span>
                            </span>
                        </div>
                        @* Password *@
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                <input class="form-control" placeholder="Nhập lại mật khẩu" name="password" type="password" ng-model="password" required>
                            </div>
                            <span ng-show="myForm.password.$dirty && myForm.password.$invalid">
                                <span ng-show="myForm.password.$error.required">Không để trống.</span>
                            </span>
                        </div>
                        @* Confim password *@
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                <input class="form-control" placeholder="Mật khẩu" name="confimpass" type="password" ng-model="confimpassword" required>
                            </div>
                            <span ng-show="myForm.password.$dirty && myForm.password.$invalid">
                                <span ng-show="myForm.password.$error.required">Không để trống.</span>
                                @*<span ng-show=" accountpassword!=confimpassword"></span>*@
                            </span>
                        </div>
                        @* __________________ *@
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="checkboxRemember"> Ghi nhớ mật khẩu
                                </label>
                            </div>
                            <input type="button" class="btn btn-lg btn-primary btn-block" value="Đăng nhập" ng-click="addNew()" ng-disabled="myForm.username.$dirty && myForm.username.$invalid ||myForm.password.$dirty && myForm.password.$invalid">
                            @*<a href="/Taikhoan/Dangky">Chưa có tài khoản</a>*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @*</div>*@
</div>
