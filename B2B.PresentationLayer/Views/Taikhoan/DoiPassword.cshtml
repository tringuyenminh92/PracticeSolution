@{
    ViewBag.Title = "DoiPassword";
}
<script src="~/Scripts/Custom/TaikhoanController.js"></script>
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>Đổi Password</strong>
                </div>
                <div class="panel-body" ng-controller="TaikhoanController">
                    <div>
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <input type="password" class="input-lg form-control" name="passwordold" id="passwordcurrent" placeholder="Password hiện tại" ng-model="passold" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="input-lg form-control" name="password1" id="password1" placeholder="Password mới" ng-model="passnew" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="input-lg form-control" name="password2" id="password2" placeholder="Nhập lại Password mới" ng-model="passwordConfirm" required>
                                        <div class="row help-block">
                                            <div class="col-sm-12" ng-show="passwordConfirm != passnew">
                                                <span class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Password chưa khớp
                                            </div>
                                            <br />
                                        </div>
                                        <input type="button" ng-disabled="passwordConfirm != passnew" class="col-xs-12 btn btn-primary btn-load btn-lg" data-loading-text="Đang đổi Password..." value="Đồng ý" ng-click='XulyDoiPassword()'>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
