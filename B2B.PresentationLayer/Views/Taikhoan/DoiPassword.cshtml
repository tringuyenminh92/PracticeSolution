@{
    ViewBag.Title = "DoiPassword";
}
<script src="~/Scripts/Custom/TaikhoanController.js"></script>
<div ng-controller="TaikhoanController" ng-init="LoadThongtintaikhoan()">
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Đổi Password</strong>
                    </div>
                    <div class="panel-body">
                        <div>
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Password hiện tại" ng-model="passold" required>
                                            <div class="row help-block">
                                                <div class="col-sm-12" ng-show="Loi.tenLoi == 'SaiPassword'">
                                                    <span class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> {{" " + Loi.hienthi}}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Password mới" ng-model="passnew" required>
                                            <div class="row help-block">
                                                <div class="col-sm-12" ng-show="(passnew + '').length < 8 && passnew != ''">
                                                    <span class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Password phải có ít nhất 8 ký tự
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Nhập lại Password mới" ng-model="passwordConfirm" required>
                                            <div class="row help-block">
                                                <div class="col-sm-12" ng-show="passwordConfirm != passnew">
                                                    <span class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Password chưa khớp
                                                </div>
                                            </div>
                                            <input type="button" ng-disabled="passwordConfirm != passnew || (passnew + '').length < 8" class="col-xs-12 btn btn-primary btn-load btn-lg" data-loading-text="Đang đổi Password..." value="Đồng ý" ng-click='XulyDoiPassword()'>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>